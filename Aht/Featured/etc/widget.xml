<?xml version="1.0" encoding="UTF-8"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="aht_featured_widget" class="Aht\Featured\Block\FProWidget\Widget\Posts">
        <label translate="true">Featured Widget</label>
        <description translate="true">Display BTL4 Information</description>
        <parameters>
            <parameter name="qty" xsi:type="text" visible="true" required="true" sort_order="11">
                <label translate="true">Quantity Product</label>
            </parameter>
            <parameter name="slider" xsi:type="select" visible="true" required="true" sort_order="10">
                <label translate="true">Slide type display</label>
                <options>
                    <option name="yes" value="1" selected="true">
                        <label translate="true">Yes</label>
                    </option>
                     <option name="no" value="0" >
                        <label translate="true">No</label>
                    </option>
                </options>
            </parameter>
            <parameter name="qty_slider" xsi:type="text" visible="true" required="true" sort_order="11">
                <label translate="true">items silder</label>
            </parameter>
        </parameters>
    </widget>
</widgets>
